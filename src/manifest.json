{
    "name": "domain-switcher-extension",
    "description": "Easily switch domains between development, staging, production or other environments of projects.",
    "version": "__REPLACED_ON_BUILD__",
    "manifest_version": 2,
    "icons": {
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "page_action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_title": "Domain Switcher",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options/options.html",
    "permissions": ["tabs", "downloads"]
}
